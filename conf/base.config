/*
 * -------------------------------------------------
 *  nf-core/rnaseq Nextflow base config file
 * -------------------------------------------------
 * A 'blank slate' config file, appropriate for general
 * use on most high performace compute environments.
 * Assumes that all software is installed and available
 * on the PATH. Runs in `local` mode - all jobs will be
 * run on the logged in environment.
 */

// Default on Google for Jackson Labs
docker.enabled = true

google {
    lifeSciences.bootDiskSize = 100.GB
    lifeSciences.preemptible = true
}

executor {
  name = 'google-lifesciences'
}

process {

  cache = 'lenient'
  container  = 'lifebitai/rnaseq:rsem'
  disk = "200 GB"
  cpus = { check_max( 2, 'cpus' ) }
  time = { check_max( 4.h * task.attempt, 'time' ) }

  errorStrategy = { task.exitStatus in [143,137,104,134,139] ? 'retry' : 'terminate' }
  maxRetries = 4

  // Process-specific resource requirements
  withLabel: low_memory {
    cpus = { check_max (2, 'cpus')}
  }
  withLabel: mid_memory {
    cpus = { check_max (4, 'cpus')}
    time = { check_max( 8.h * task.attempt, 'time' ) }
  }
  withLabel: high_memory {
    cpus = { check_max (10, 'cpus')}
    time = { check_max( 8.h * task.attempt, 'time' ) }
  }
  withName: getAccession {
    cpus = { check_max (10, 'cpus')}
    errorStrategy = { task.attempt <= 100 ? 'retry' : 'ignore' }
    container = 'avsastry/fasterq-dump:1.0'
  }
  withName: makeHISATindex {
    cpus = { check_max( 10, 'cpus' ) }
    time = { check_max( 5.h * task.attempt, 'time' ) }
  }
  withName: trim_galore {
    time = { check_max( 8.h * task.attempt, 'time' ) }
  }
  withName: sortmerna {
    cpus = { check_max( 16 * task.attempt, 'cpus' ) }
    time = { check_max( 24.h * task.attempt, 'time' ) }
    maxRetries = 2
  }
  withName: markDuplicates {
    // Actually the -Xmx value should be kept lower,
    // and is set through the markdup_java_options
    cpus = { check_max( 8, 'cpus' ) }
  }
  withLabel: salmon {
    cpus = { check_max( 8, 'cpus' ) }
  }
  withName: 'get_software_versions' {
    cache = false
  }
  withName: 'multiqc' {
    cache = false
  }
  withName: 'hbadeals' {
    container = 'lifebitai/hbadeals:rsem'
    errorStrategy = 'ignore'
    cpus = { check_max (10, 'cpus')}
  }
}

params {
  // Defaults only, expecting to be overwritten
  max_memory = 128.GB
  max_cpus = 16
  max_time = 240.h
  igenomes_base = 's3://ngi-igenomes/igenomes/'
}
